<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

    <com.gdut.base.widgets.HeaderBar
           style="@style/MatchWrap"
           app:isShowBack="false"
           app:titleText="注册"
           app:rightText="登录"
    />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/mMobileEt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入手机号码"/>
        <com.kotlin.base.widgets.VerifyButton
                android:id="@+id/mGetVerifyCodeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"/>
    </LinearLayout>
    <EditText
            android:id="@+id/mVerifyCodeEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"/>
    <EditText
            android:id="@+id/mPwdEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请确认密码"/>
    <Button
            android:id="@+id/mRegisterBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_marginTop="30dp"/>

</LinearLayout>